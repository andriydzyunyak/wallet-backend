{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Wallet API",
    "description": "Documentations of Wallet API"
  },
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "servers": [{"url":"https://wallet-app-backend-project.herokuapp.com", "description":" API base URL"}],

  "paths": {
    "/users/register": {
      "post": {
        "tags": ["User"],
        "summary": "User registration",
        "description": "Registering unique user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User is created"
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "409": {
            "description": "Provided email already exists"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["User"],
        "summary": "User login",
        "description": "Authorization user",
        "parameters": [],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {"email": "user@example.com", "password":"examplepassword"}
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User is loggedIn"
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "401": {
            "description": "Email or password is wrong"
          },
          "404": {
            "description": "User is not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/users/logout": {
      "get": {
        "tags": ["User"],
        "summary": "User logout",
        "description": "Logout authorized user",
        "parameters": [
          {
          "in": "header",
          "name": "Authorization",
          "description":"Token current user",
          "required": true,
          "schema" : {
            "type": "string"
          }
        }],
        "responses": {
          "204": {
            "description": "User is loggedOut"
          },
          "401": {
            "description": "The token is missing or invalid"
          },
          "500": {
            "description": "Server error"
          }
        },
         "security": [{ "Bearer": [] }]
      }
    },
    "/users/current": {
      "get": {
        "tags": ["User"],
        "summary": "Getting information about current user",
        "description": "Show current user",
        "parameters": [
          {
          "in": "header",
          "name": "Authorization",
          "description":"Token current user",
          "required": true,
          "schema" : {
            "type": "string"
          }
        }],
        "responses": {
          "200": {
            "description": "User found"
          },
          "401": {
            "description": "The token is missing or invalid"
          },
          "500": {
            "description": "Server error"
          }
        },
         "security": [{ "Bearer": [] }]
      }
    },
    "/transactions": {
      "get": {
        "tags": ["Transaction"],
        "summary": "Getting current user transactions",
        "description": "Show current user transactions",
        "parameters": [
          {
          "in": "header",
          "name": "Authorization",
          "description":"Token current user",
          "required": true,
          "schema" : {
            "type": "string"
          }
        }],
        "responses": {
          "200": {
            "description": "Transactions found"
          },
          "401": {
            "description": "The token is missing or invalid"
          },
          "404": {
            "description": "Current user transactions is not found"
          },
          "500": {
            "description": "Server error"
          }
        },
         "security": [{ "Bearer": [] }]
      },
      "post": {
        "tags": ["Transaction"],
        "summary": "Add transaction",
        "description": "Added one transaction",
        "parameters": [
          {
          "in": "header",
          "name": "Authorization",
          "description":"Token current user",
          "required": true,
          "schema" : {
            "type": "string"
          }
        }
        ],
        "security": [{ "Bearer": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Transaction"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Transaction added"
          },
          "400": {
            "description": "Bad request (invalid request body)"
          },
          "401": {
            "description": "The token is missing or invalid"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["email", "password", "name"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Automatic generated user's id"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password"
          },
          "name": {
            "type": "string",
            "description": "User's name"
          }
        },
        "example":
          {"email": "user@example.com", "password":"examplepassword", "name": "Username"}
      },
      "Transaction": {
        "type": "object",
        "required": ["sum", "date", "type"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Automatic generated transactions id"
          },
          "category": {
            "type": "string",
            "description": "Transaction category"
          },
          "sum": {
            "type": "number",
            "description": "Transaction sum",
            "format":"float"
          },
          "date": {
            "type": "string",
            "description": "Transaction date",
            "format":"date"
          },
          "type": {
            "type": "boolean",
            "description": "Transaction type (income/expense)"
          },
          "comment": {
            "type": "string",
            "description": "Transaction type (income/expense)"
          }
        },
        "example":
          {"type":"expense", "category":"Food", "sum": "1234.56", "date": "01.01.1970" }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}